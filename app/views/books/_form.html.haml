= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :year
    = f.date_select :year
  .field
    = f.label :gender
    = f.text_field :gender
  .field
    = f.label :body
    = f.text_area :body
  .actions
    = f.submit 'Save'
